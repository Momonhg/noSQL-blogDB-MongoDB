
<%-include("partials/header.ejs");-%>

<div class ="box" id="heading">
<h1> Compose </h1>
</div>

<div class="container">
  <form class ="item" action="/compose" method="post">
  <div class="row">
    <div class="col-25">
      <label for="title">The title</label>
    </div>
    <div class="col-75">
      <input type="text" id="title" name="title" placeholder="The title..">
    </div>
  </div>
  <div class="row">
    <div class="col-25">
      <label for="post">Post</label>
    </div>
    <div class="col-75">
      <textarea id="subject" name="content" placeholder="Write something.." style="height:200px"></textarea>
    </div>
  </div>
  <br>
  <div class="row">
    <input type="submit" name="post" value="Publish">
  </div>
  </form>
</div>





